var shopItems = []

$("document").ready(function() {
	
	$("h4").hide();
	
	
	$("h1").click(function() {
		$("h4").slideToggle(1000);
		
		$("h2").animate({
			// for font size, you can also use hide show or toggle
			// ex: "font-size":"toggle"
			//"font-size" : "3em",
			
			"font-size":"toggle",
			"width" : "45%",
			"left" : "+=200px" 

		}, 1000, function() {
			
			$("h3").fadeToggle(1000);
			
			
			
		});
	});
	
	$("#stepGuide").hide();
	$("#stepGuideFirst").hide();
	$("#stepGuideSecond").hide();
	$("#stepGuideThird").hide();
	
	
	$("h4").click(function() {
		$("#stepGuide").fadeIn(1000);
		
		$("#stepGuideFirst").delay(1000).fadeIn(1000);
		$("#stepGuideSecond").delay(2000).fadeIn(1000);
		$("#stepGuideThird").delay(3000).fadeIn(1000);
		
		//$("#stepGuideFirst").animate({
		//	"font-size":"toggle";
		//});
	});
	
	$("#clickforpic02").click(function(){
		//$("#jqhtml").empty(); //.html("<b style='color:red;'>clicked</b>");
		$("#clickforpic02").after('<div><img class="imgCenter" id="snow02" src="images/snowboard_sequence_2_600x450.png" alt="pic02"></div>');
		
		$("#snow02").after('<h5 id="click03"> Click here to see picture 3 ..</h5>');
		
		$("#click03").click(function() {
			$("#click03").after('<div><img class="imgCenter" id="snow03" src="images/snowboard_sequence_3_600x450.png" alt="pic03"></div>');
		
			$("#snow03").after('<h5 id="click04"> Click here to see picture 4 ..</h5>');
			
			$("#click04").click(function() {
				$("#click04").after('<div><img class="imgCenter" id="snow04" src="images/snowboard_sequence_4_600x450.png" alt="pic04"></div>');
			
				$("#snow04").after('<h5 id="click05"> Click here to see picture 5 ..</h5>');
				
				$("#click05").click(function() {
					$("#click05").after('<div><img class="imgCenter" id="snow05" src="images/snowboard_sequence_5_600x450.png" alt="pic05"></div>');
					
					$("#snow05").after('<h5 id="click06"> Click here to see picture 6 ..</h5>');
					
					$("#click06").click(function() {
						$("#click06").after('<div><img class="imgCenter" id="snow06" src="images/snowboard_sequence_final600x450.png" alt="pic06"></div>');
						
						$("#snow06").after('<h5 id="click07"> Click here to see an animated gif ..</h5>');
						
						$("#click07").click(function() {
							$("#click07").after('<div><img class="imgCenter" id="snow07" src="images/snowboard.gif" alt="pic07"></div>');
	
						});

					});
				});
			});
		});
	});
});
